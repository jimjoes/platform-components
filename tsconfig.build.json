{
  "exclude": ["**/*.test.ts", "**/*.stub.ts", "node_modules", "dist"],
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "incremental": true,
    "target": "ES2015",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@jimjoes/*": ["./packages/*/"]
    }
  },
  "references": [
    {
      "path": "./packages/pulumi/*"
    }
  ]
}
